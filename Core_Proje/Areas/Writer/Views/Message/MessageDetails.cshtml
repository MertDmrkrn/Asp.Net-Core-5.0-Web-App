@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h1>Mesaj Detayları</h1>

<form class="form-group">
    <br />
    @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextAreaFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control" })
</form>