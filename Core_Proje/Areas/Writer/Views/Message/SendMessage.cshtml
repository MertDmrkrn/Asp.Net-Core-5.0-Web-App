@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>


<form class="form-group" method="post">
    <br />
    @Html.Label("Alıcı Mail")
    @Html.TextAreaFor(x => x.Receiver, new { @class = "form-control" })
    <br />
    @Html.Label("Konu")
    @Html.TextAreaFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Gönder</button>
</form>


