@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post)) 
{ 
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yetenek Güncelleme Paneli</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextAreaFor(x => x.SkillID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextAreaFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextAreaFor(x => x.Value, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>
}
